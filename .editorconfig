# EditorConfig helps maintain consistent coding styles
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
max_line_length = 120
quote_type = double

[*.py]
max_line_length = 88

[*.java]
indent_size = 4

[*.cpp]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
