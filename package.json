{
  "name": "layers-radar-states-streets",
  "version": "1.0.0",
  "description": "Interactive map application with OpenLayers and comprehensive testing",
  "main": "script.js",
  "type": "module",
  "scripts": {
    "start": "http-server -p 8080 -c-1",
    "start:8082": "http-server -p 8082 -c-1",
    "dev": "npm run start:8082",
    "test": "node tests/run-all-tests.js",
    "test:unit": "vitest run --config tests/vitest.config.js",
    "test:unit:watch": "vitest --config tests/vitest.config.js",
    "test:unit:ui": "vitest --ui --config tests/vitest.config.js",
    "test:coverage": "vitest run --coverage --config tests/vitest.config.js",
    "test:playwright": "playwright test --config=playwright.config.js",
    "test:playwright:ui": "playwright test --ui --config=playwright.config.js",
    "test:playwright:debug": "playwright test --debug --config=playwright.config.js",
    "test:cypress": "cypress run --config-file cypress.config.js",
    "test:cypress:open": "cypress open --config-file cypress.config.js",
    "test:selenium": "node tests/selenium/selenium-test.js",
    "test:performance": "lhci autorun --config=.lighthouserc.js",
    "test:integration": "node quick-test.js",
    "test:report": "node -e \"console.log('ğŸ“Š Test reports generated in tests/reports/')\"",
    "test:quick": "npm run test:integration && npm run test:unit",
    "build": "echo 'No build step required for static site'",
    "lint": "echo 'Linting not configured yet'",
    "format": "echo 'Formatting not configured yet'",
    "clean": "rm -rf tests/reports/* tests/screenshots/* || true",
    "setup": "npm install && mkdir -p tests/reports tests/screenshots",
    "postinstall": "npm run setup"
  },
  "keywords": [
    "openlayers",
    "maps",
    "gis",
    "javascript",
    "testing",
    "playwright",
    "cypress",
    "selenium",
    "vitest"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@vitest/ui": "^1.0.0",
    "c8": "^8.0.1",
    "cypress": "^13.6.0",
    "jsdom": "^23.2.0",
    "playwright": "^1.40.0",
    "selenium-webdriver": "^4.15.0",
    "vitest": "^1.6.1",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/layers-radar-states-streets.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/layers-radar-states-streets/issues"
  },
  "homepage": "https://github.com/your-username/layers-radar-states-streets#readme"
}
